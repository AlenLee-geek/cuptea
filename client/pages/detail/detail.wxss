}

.commodity-info-text > text{
   font-size: 14px;
   font-weight: 300;
   /* align-self:flex-end; */
}
.price{
  color: #b4a078;
}
.close{
  display: flex;

}

.close > image{
  width: 50rpx;
  height: 50rpx;
}
.specs{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}
.specs-title{
  font-size: 16px;
  font-weight: 300;
}

.spec{
  display: flex;
  align-items: center;
 
  margin-top: 20rpx;
}

.spec-item {
  margin-left: 20rpx;
  padding: 10rpx;
  border: 1px solid #aaa;
  font-size: 14px;
  font-weight: 300;
  border-radius: 10rpx;
  

}

.choosed{
   border: 1px solid #b4a078;
   color: #b4a078;
}

.num{
  display: flex;
  flex-direction: column;
}
.num-title{
  font: 14px;
  font-weight: 300;
  margin-left: 20rpx;
}

/*主容器*/
.stepper {
  display: flex;
  justify-content: center;
  align-items: center;
	border: 1px solid #b4a078;
	border-radius: 8px;
  margin: 20rpx;
  margin-left: 40rpx;
  width: 50%;
 
}
 
/*加号和减号*/
.stepper text {
  align-self: center;
  text-align: center;
  padding: 10rpx;
  flex: 1;
 
}
 
/*数值*/
.stepper input {
	text-align: center;
  align-self: center;
	font-size: 14px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #b4a078;
	border-right: 1px solid #b4a078;
  padding: 10rpx;
  flex: 2;
 
}
 
/*普通样式*/
.stepper .normal{
	color:#888;
}
 
/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

.make-sure{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  margin-bottom: 40rpx;
}
.make-sure text{
  flex: 2;
  font-size: 18px;
  /* font-weight: 300; */
  border: 1px solid #b4a078;
  text-align: center;
  border-radius: 10rpx;
  padding: 10rpx;
  color: #eee;
  background-color: #b4a078;


}
