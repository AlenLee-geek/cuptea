page, .container{
  width:100%;
  
}

.navigator{
  display: flex;
  flex-direction: row;
  position: fixed;
  top:0;
  left: 0;
  z-index: 999;
  height: 44px;
  width: 100%;
  background-color: rgba(3,169,244,0);
  padding-top: 20px;
 
  
  
}
.center{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 44px;
}
.center > image{
  width: 25px;
  height: 25px;
}
.title{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 44px;
  margin-right: 45px;
 
}
.title > text{
  font-size: 16px;
  font-weight: 500;
}

.product-name{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 60px;
  margin-left: 10px;
  padding-top: 5px;
  
}

.product-name > text{
  font-size: 20px;
  font-weight: 400;
}

.product-describe{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 12px;
  padding: 4px;
}
.product-describe > text{
  font-size: 14px;
  font-weight: 300;
}
.slide{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300px;

 
}
.slide-img{
  /* width: 92%;  */
  box-shadow: 0px 10px 20px -10px #ddd;
  /* margin-left: 10px; */
  padding: 10px;
  margin: 0 auto;

}

.sell-info{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.sell-price{
  color:#b4a078;
  font-size: 20px;
  font-weight: 400;
  
}
.sell-num{
  font-size: 12px;
  font-weight: 300;
}
.base-action{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
  background-color: #fff;
  border-bottom: 1px dashed #eee;
  
}

.base-action > image{
  width: 20px;
  height: 20px;
  padding: 20rpx 15rpx;


  /* margin-right: 15px;  */
  /* margin-bottom: 10px; */
  
}

.action{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 10rpx;
  left: 150rpx;
  z-index: 999;
}
.add-card, .buy{
  
  border-radius: 20px;
  font-size: 12px;
  font-weight: 300;
  margin:10px;
  background-color: #b4a078;
  opacity: .9;
  color: #eee;
  

}




.tab-h{
   
    height: 80rpx;
    line-height: 80rpx;
    background: #fff; 
    font-size: 16px; 
    margin-left: 220rpx;
    color: #555;
    font-weight: 300;
   
   
  }
.tab-item{
  margin:0 36rpx;
  display: inline-block;
  }
.tab-item.active{
  color: #b4a078;
  position: relative;
  }
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
