<!--导航栏  -->
<view class='navigator'>  
   <view class='center' bindtap='goUser'>
      <view class='user'>
        <open-data type="userAvatarUrl" ></open-data>
      </view>
      <!-- <image src='../../assets/41.png'></image> -->
   </view>
   <view class='title'>
      <text>CupTea</text>
      <!-- <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">获取用户信息</button> -->

   </view>

</view>

<view class='container'>
  <!--每日一图  -->
  <view class='one-day-image'>
      <image class='header-image' src='../../assets/header_img.jpg'></image>
      <!--图片描述  -->
      <view class='one-day-text'>
          <text>茶好客自来</text>
      </view>
    
  </view>

  <!--每日一词  -->
  <view class='one-day-word'>
      <!--内容标题  -->
      <view class='one-day-word-title'>
        <text>每日一茶语</text>
      </view>
      <!--内容  -->
      <view class='one-day-word-content'>
        <text>
          山间乃是人家，清香嫩蕊黄芽
        </text>
      </view>
      <!--摘要  -->
      <view class='one-day-word-abstract'>
        <text>
        --chayu
        </text>
      </view>
  </view>

  <!--每日优选 -->

  <view class='recommend' bindtap='pickTea'>
     <view class='recommend-title'>
        <text>精选-TEA</text>
     </view>

      <view class='recommend-container'> 
        <!--优选商品  -->
        <image src='../../assets/c-tea.jpg'></image>
     </view>
        <!--优选商品简介  -->
      <view class='recommend-brief'>
          <text>政和大白茶，亦称“政大”。茶树无性系品种。</text>
      </view>
      <view class='recommend-price'>
        <text class="old-price" >123￥</text>
        <text class="new-price">123￥</text>
        <button class="pick">立即选购</button>
      </view>


    
  </view>
  <!--精品分类  -->
  <view class='category'>
     <view class='category-title'>
       <text>精品-分类</text>
     </view>
     <view class='items' bindtap='goCategory'>
        <view class="item-describe">
              <text class='item-title'>何以解苦夏，唯有清凉饮</text>
              <text class='item-text'>炎炎苦夏，吃什么都是没滋没味</text>
        </view>
         <view class='item-image'>
            <image src='../../assets/tea.jpg'></image>
        </view> 
     </view>

      <view class='items' bindtap='goCategory'>

       <view class='item-image'>
            <image src='../../assets/c-tea-1.jpg'></image>
        </view> 

        <view class="item-describe">
              <text class='item-title'>何以解苦夏，唯有清凉饮</text>
              <text class='item-text'>炎炎苦夏，吃什么都是没滋没味</text>
        </view>
        
     </view>
  </view>


  


</view>

